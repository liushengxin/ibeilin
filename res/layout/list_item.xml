<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/huodong_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/bg1"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="#00ffffff"
            android:paddingRight="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/huodong_line" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:src="@drawable/huodong_dot" />
        </RelativeLayout>
   
            <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/bg1"
            android:padding="5dp"
       >
            
<!--        活动时间     -->
             <RelativeLayout
             android:id="@+id/huodong_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
               android:layout_centerVertical="true"
       >
            
        <TextView
            android:id="@+id/huodong_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
         
            android:text="20"
            android:textSize="25sp" />
	s        <TextView
            android:id="@+id/huodong_month"
            android:layout_toRightOf="@id/huodong_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_alignBaseline="@id/huodong_date"           
             android:text="12"
            android:textSize="10sp" />

        <TextView
             android:layout_toRightOf="@id/huodong_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="月"
           android:layout_alignBaseline="@id/huodong_date"
            android:textSize="10sp" />
        </RelativeLayout>
        
             
             
<!--       活动详情        -->

          <RelativeLayout
             android:id="@+id/huodong_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/huodong_time"
            
       >
        <ImageView
            android:id="@+id/huodong_img_shetuanpage"
            android:layout_width="40dp"
            android:layout_height="40dp"   
			android:scaleType="fitXY" 
		 	 android:layout_marginLeft="5dp"
		 	 android:src="@drawable/pic2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/huodong_img_shetuanpage"
            android:layout_marginLeft="5dp"
           >

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sadada"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sadada"
                android:textSize="12sp" />
        </LinearLayout>

        </RelativeLayout>
       
          
          
<!--         活动反馈   -->ss
          
          
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:layout_alignParentRight="true">
          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:gravity="center_vertical">
            
            <ImageView
                android:id="@+id/huodong_like"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/heart_green" />
    		<TextView
    		    android:layout_marginLeft="2dp"
                android:id="@+id/huodong_like_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="111"
                android:textColor="@color/green_yellow"
                android:textSize="13sp" />
       		 </LinearLayout>
        </LinearLayout>

 
</RelativeLayout>
</LinearLayout>
</FrameLayout>